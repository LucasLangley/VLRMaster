{
  "name": "vlrmaster",
  "version": "1.0.0",
  "description": "Aplicativo para melhorar performance no Valorant com overlay in-game, análise em tempo real e ferramentas utilitárias",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run electron-dev\" \"npm run react-dev\"",
    "electron-dev": "cross-env NODE_ENV=development nodemon --exec electron . --watch main.js",
    "react-dev": "webpack serve --mode development",
    "build": "webpack --mode production",
    "pack": "electron-builder",
    "dist": "npm run build && electron-builder"
  },
  "keywords": [
    "valorant",
    "gaming",
    "overlay",
    "analytics",
    "react"
  ],
  "author": "VLRMaster Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "babel-loader": "^9.1.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.0",
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "html-webpack-plugin": "^5.5.0",
    "nodemon": "^3.0.0",
    "style-loader": "^3.3.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "electron-store": "^8.1.0",
    "framer-motion": "^10.12.0",
    "lucide-react": "^0.263.0",
    "node-machine-id": "^1.1.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router": "^6.14.0",
    "styled-components": "^6.0.0",
    "systeminformation": "^5.18.0"
  },
  "build": {
    "appId": "com.vlrmaster.app",
    "productName": "VLRMaster",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "main.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  }
}
